<div class="sage-panel">
  <div class="sage-media">
    <div class="sage-media-body">
      <%= link_to pages_item_url(type: type, title: title, description: description) do %>
        <h3 id="<%= title %>" class="example__title"><%= title.titleize %></h3>
      <% end %>
    </div>
    <%= link_to pages_breakout_url(type: type, title: title, description: description), target: "_blank", class: "example__link" do %>
      <i class="sage-icon sage-icon-launch-app"></i>
    <% end %>
  </div>
  <h6 class="example__label">Preview</h6>
  <div class="example__preview">
    <%= render "sage/examples/elements/#{title}/preview" %>
  </div>
  <h6 class="example__label">Code</h6>
  <div class="example__code">
    <pre class="prettyprint"><code><%= CGI.unescapeHTML(CGI.escapeHTML render "sage/examples/elements/#{title}/preview") %></code></pre>
  </div>
</div>
