<!-- Danger button -->
<%= render "sage/examples/elements/danger_button/markup",
  element: "button",
  text: "Danger Button",
  disabled: false,
  aria_disabled: false
%>
<!-- Danger button link -->
<%= render "sage/examples/elements/danger_button/markup",
  element: "a",
  text: "Danger Button (link)",
  disabled: false,
  aria_disabled: false
%>

<br>

<!-- Danger button disabled -->
<%= render "sage/examples/elements/danger_button/markup",
  element: "button",
  text: "Danger (disabled)",
  disabled: true,
  aria_disabled: false
%>
<!-- Danger button link disabled -->
<%= render "sage/examples/elements/danger_button/markup",
  element: "a",
  text: "Danger (link, disabled)",
  disabled: true,
  aria_disabled: true
%>